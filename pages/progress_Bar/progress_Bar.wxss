/* pages/progress_Bar/progress_Bar.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.circle-box {
  text-align: center;
  margin-top: 10vw;
  flex-direction: column;
  background-color: #2ba99b;
}

.circle {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

.draw_btn {
  width: 35vw;
  position: absolute;
  top: 330rpx;
  right: 0;
  left: 0;
  margin: auto;
  border: 1px #000 solid;
  border-radius: 5vw;
}
.word_list{
   width: 100%;
   height: 80rpx;
   flex-direction: column;
   background-color: #2ba99b;
   border-color: balck;
   color:white;
   position:center;
   text-underline-position: center;
   float:center;
   background-position:center;
   align-content: flex-start;
   background-repeat: round;
   display: flex;
   align-items: center;
   justify-content: center;
}
.book_list{
   width: 100%;
   height: 120rpx;
   flex-direction: column;
   background-color: #2ba99b;
   border-color: balck;
   color:white;
   position:center;
   font-size: 50rpx;
   font-weight: 800;
   text-underline-position: center;
   float:center;
   background-position:center;
   align-content: flex-start;
   background-repeat: round;
   display: flex;
   align-items: center;
   justify-content: center;
}
