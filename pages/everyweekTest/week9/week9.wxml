<view class="page">
<view wx:if="{{!showDaan}}"  class="content">
<view class="blank"></view>
  <view class="day_num">{{true_num+1+".  "}}{{title}}</view>
   <view class="button-miss"   catchtap="change">
      <text class="word-miss" catchtap="change" >不认识</text>
    </view>
     <view class="button-next" catchtap="change">
      <text class="word-miss" catchtap="change">认识</text>
</view>
</view>
<block wx:if="{{showDaan==true}}" class="content">
<view class="blank"></view>
  <view class="day_num">{{true_num+1+".  "}}{{title}}</view>
  <view class="day_num1">{{da1}}</view>
    <view class="button-miss1" catchtap="next">
      <text class="word-miss" catchtap="next">下一个</text>
    </view>
     <view class="button-miss2" catchtap="last">
      <text class="word-miss" catchtap="last">上一个</text>
    </view>
</block>
</view>
 